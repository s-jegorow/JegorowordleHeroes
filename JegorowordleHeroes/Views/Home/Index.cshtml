@{
    Layout = "_Layout";
}
<section class="top">
    <div class="names">
        <label>
            Dein Name:
            <input id="me" maxlength="12" placeholder="Spieler A" />
        </label>
        <label>
            Gegner:
            <input id="other" maxlength="12" placeholder="Spieler B" />
        </label>
        <label>
            Session-Code:
            <input id="room" maxlength="8" placeholder="z.B. JGH123" />
        </label>
        <button id="join">Beitreten/Start</button>
    </div>
</section>

<section class="status">
    <div>Spieler: <span id="p1">–</span> vs <span id="p2">–</span></div>
    <div id="message"></div>
</section>

<section id="board" class="board" aria-label="Wordle-Felder"></section>

<section class="keyboard" id="keyboard"></section>

@section Scripts {
    <script src="~/js/game.js"></script>
}
